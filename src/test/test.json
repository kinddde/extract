{
  "url": "https://www.aikantxt.la/aikan28772/",
  "method": "GET",
  "paramType": "json",
  "encode": "qs",
  "response": "text",
  "rules": [
    {
      "fun": "mapObject",
      "arg": {
        "$$$$": [{ "fun": "domParse" }],
        "title": [
          {
            "fun": "xpath",
            "arg": "string(//div[contains(@class, \"book-info\")]/div/h1/text())"
          }
        ],
        "author": [
          {
            "fun": "xpath",
            "arg": `string(//div[contains(@class, "book-info")]/div/em/text())`
          },
          { "fun": "replace", "arg": { "reg": "作者" } }
        ]
      }
    }
  ]
}
